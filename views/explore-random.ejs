<div class="container text-center">
  <h1 class="pb-4">Explore Random</h1>

  <div class="row justify-content-center">
    <% if (recipe) { %>
      <div class="col-md-8">
        <div class="card">
          <img src="<%= recipe.image %>" style="height: 50vh; border-radius: 15px; aspect-ratio: 4/3;" class="card-img-top" alt="<%= recipe.title %>">
          <div class="card-body">
            <h5 class="card-title"><%= recipe.title %></h5>
            <div class="recipe-summary">
              <!-- Use <%- %> to render HTML content -->
              <%- recipe.summary %>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              <strong>Servings:</strong> <%= recipe.servings %>
            </li>
            <li class="list-group-item">
              <strong>Ready in Minutes:</strong> <%= recipe.readyInMinutes %>
            </li>
          </ul>
          <div class="card-body">
            <a href="<%= recipe.sourceUrl %>" class="card-link" target="_blank">View Recipe</a>
          </div>
        </div>
      </div>
    <% } else { %>
      <p>No items found.</p>
    <% } %>
  </div>
</div>
